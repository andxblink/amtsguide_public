{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/andxblink/amtsguide_public/schemas/pattern_library.schema.json",
  "title": "PatternLibrary",
  "description": "Evidence-backed patterns for prompt improvement derived from telemetry data",
  "type": "object",
  "required": ["patterns", "generated_at"],
  "properties": {
    "version": {
      "type": "string",
      "default": "1.0",
      "description": "Schema version"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this pattern library was generated"
    },
    "data_range": {
      "type": "object",
      "properties": {
        "from": { "type": "string", "format": "date" },
        "to": { "type": "string", "format": "date" },
        "record_count": { "type": "integer" }
      },
      "description": "Date range and count of telemetry data used"
    },
    "patterns": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Pattern"
      },
      "description": "List of evidence-backed patterns"
    }
  },
  "$defs": {
    "Pattern": {
      "type": "object",
      "required": ["id", "name", "category", "evidence"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "Unique identifier for the pattern"
        },
        "name": {
          "type": "string",
          "description": "Human-readable pattern name"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the pattern"
        },
        "category": {
          "type": "string",
          "enum": ["constraint", "style", "content", "structure", "example"],
          "description": "Category of prompt element this pattern applies to"
        },
        "recommendation": {
          "type": "string",
          "enum": ["add", "remove", "modify", "prefer", "avoid"],
          "description": "What action to take"
        },
        "evidence": {
          "$ref": "#/$defs/PatternEvidence"
        },
        "confidence": {
          "type": "string",
          "enum": ["high", "medium", "low"],
          "description": "Confidence level based on evidence strength"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Tags for filtering patterns"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "before": { "type": "string" },
              "after": { "type": "string" },
              "impact": { "type": "string" }
            }
          },
          "description": "Before/after examples with impact description"
        }
      }
    },
    "PatternEvidence": {
      "type": "object",
      "required": ["sample_size"],
      "properties": {
        "sample_size": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of telemetry records analyzed"
        },
        "prompts_with_pattern": {
          "type": "integer",
          "description": "Number of prompts that include this pattern"
        },
        "prompts_without_pattern": {
          "type": "integer",
          "description": "Number of prompts that don't include this pattern"
        },
        "avg_score_with": {
          "type": "number",
          "description": "Average composite score with pattern"
        },
        "avg_score_without": {
          "type": "number",
          "description": "Average composite score without pattern"
        },
        "score_delta": {
          "type": "number",
          "description": "Difference in average scores (positive = pattern helps)"
        },
        "avg_attempts_with": {
          "type": "number",
          "description": "Average attempts to acceptance with pattern"
        },
        "avg_attempts_without": {
          "type": "number",
          "description": "Average attempts to acceptance without pattern"
        },
        "avg_edits_with": {
          "type": "number",
          "description": "Average post-gen edits with pattern"
        },
        "avg_edits_without": {
          "type": "number",
          "description": "Average post-gen edits without pattern"
        },
        "statistical_significance": {
          "type": "boolean",
          "description": "Whether the difference is statistically significant"
        }
      }
    }
  }
}

